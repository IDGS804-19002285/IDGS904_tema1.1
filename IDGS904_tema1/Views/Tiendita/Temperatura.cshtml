@model IDGS904_tema1.Models.Temperatura
@{
    ViewBag.Title = "Temperatura";
}

<h2>Convertidor de temperaturas </h2>
@using (Html.BeginForm()){
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.temp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.temp, new { htmlAttributes = new { @class = "form-control",required = "required" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset col-md-10">
                @Html.RadioButtonFor(model => model.conv, "1")@Html.Label("De C° a F°")
                <br />
                @Html.RadioButtonFor(model => model.conv, "2")@Html.Label("De F° a C°")
                <br />
                <input type="submit" name="name" value="Convertir " />
            </div>
        </div>
    </div>
}

